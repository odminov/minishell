#include <signal.h>
#include <stdio.h>
 
//обработчик
void listener(int sig) {
    fprintf(stdout, "listener\n");
}
 
int main(void) {
    //устанавливаем обработчик для сигнлана SIGINT
	while (1)
	{
		signal(SIGINT, listener);
	}
    //посылаем сигнал
	return (0);
}
